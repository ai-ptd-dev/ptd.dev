<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="hero-section text-center py-5 mb-5 rounded">
        <h1 class="display-4 fw-bold">Documentation</h1>
        <p class="lead">Complete guide to PTD - Polyglot Transpilation Development</p>
      </div>
    </div>
  </div>

  <div class="row">
    <% if @docs.any? %>
      <% @docs.each do |category, docs| %>
        <div class="col-lg-6 mb-4">
          <div class="card feature-card h-100">
            <div class="card-body">
              <h3 class="card-title text-capitalize mb-3">
                <i class="bi bi-book me-2"></i><%= category.gsub('-', ' ') %>
              </h3>
              
              <% if docs.any? %>
                <div class="list-group list-group-flush">
                  <% docs.each do |doc| %>
                    <a href="/docs/<%= category %>/<%= doc[:slug] %>" 
                       class="list-group-item list-group-item-action border-0 px-0">
                      <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1"><%= doc[:title] %></h6>
                        <small class="text-muted">
                          <i class="bi bi-arrow-right"></i>
                        </small>
                      </div>
                      <% if doc[:description] %>
                        <p class="mb-1 text-muted small"><%= doc[:description] %></p>
                      <% end %>
                    </a>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted">No documentation available in this category yet.</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="bi bi-book display-1 text-muted"></i>
          </div>
          <h3>Documentation Coming Soon</h3>
          <p class="text-muted">We're working hard to create comprehensive documentation for PTD.</p>
          <a href="/blog" class="btn btn-ptd-primary">Check Our Blog for Updates</a>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Start Section -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card bg-light">
        <div class="card-body">
          <h4 class="card-title">Quick Start</h4>
          <p class="card-text">
            New to PTD? Start with our getting started guide to learn the basics of 
            polyglot transpilation development.
          </p>
          <div class="d-flex gap-2">
            <a href="/docs/getting-started/quick-start" class="btn btn-ptd-primary">
              Get Started
            </a>
            <a href="/blog" class="btn btn-outline-secondary">
              Read Blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>